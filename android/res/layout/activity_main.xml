<?xml version="1.0" encoding="utf-8"?>
<!-- 界面外围的的整体布局风格 -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp" >

    <TextView
        android:id="@+id/txtTitle2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center_horizontal"
        android:text="@string/addlogin_title"
        android:textColor="#bb8736"
        android:textSize="30sp" />
    <!-- 添加一个LinearLyou布局组件 -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/table_style"
        android:orientation="vertical"
        android:padding="10dp" >

        <!-- 上半部分：TableLayout完成我们的标签和编辑文本框 -->

        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:collapseColumns="2"
            android:stretchColumns="1" >

            <!-- 第一行组件标签 -->

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <!-- 添加文本标签 -->

                <TextView
                    android:id="@+id/lblBelong"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="拓客组归属："
                    android:textColor="#E616FA"
                    android:textSize="20sp" />

                <!-- 添加一个编辑文本框 -->

                <EditText
                    android:id="@+id/belong"
                    android:layout_width="fill_parent"
                    android:layout_height="35dp"
                    android:background="@drawable/txt_style"
                    android:hint="请输入拓客组归属信息"
                    android:inputType="text"
                    android:paddingLeft="8dp"
                    android:textSize="15sp" />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp" >

                <!-- 添加文本标签 -->

                <TextView
                    android:id="@+id/lblKnow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="获知途径："
                    android:textColor="#E616FA"
                    android:textSize="20sp" />

                <!-- 添加一个编辑文本框 -->

                <EditText
                    android:id="@+id/know"
                    android:layout_width="fill_parent"
                    android:layout_height="35dp"
                    android:background="@drawable/txt_style"
                    android:hint="请输入获知途径信息"
                    android:inputType="text"
                    android:paddingLeft="8dp"
                    android:textSize="15sp" />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp" >

                <!-- 添加文本标签 -->

                <TextView
                    android:id="@+id/lblguwen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="置业顾问："
                    android:textColor="#E616FA"
                    android:textSize="20sp" />

                <!-- 添加一个编辑文本框 -->

                <EditText
                    android:id="@+id/guwen"
                    android:layout_width="fill_parent"
                    android:layout_height="35dp"
                    android:background="@drawable/txt_style"
                    android:hint="请输入置业顾问信息"
                    android:inputType="text"
                    android:paddingLeft="8dp"
                    android:textSize="15sp" />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp" >

                <!-- 添加文本标签 -->

                <TextView
                    android:id="@+id/lblbeizhu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="备注："
                    android:textColor="#E616FA"
                    android:textSize="20sp" />

                <!-- 添加一个编辑文本框 -->

                <EditText
                    android:id="@+id/beizhu"
                    android:layout_width="fill_parent"
                    android:layout_height="35dp"
                    android:background="@drawable/txt_style"
                    android:hint="请输入备注信息"
                    android:inputType="text"
                    android:paddingLeft="8dp"
                    android:textSize="15sp" />
            </TableRow>
        </TableLayout>

        <!-- 下半部分：LinearLayout实现按钮组件的添加 -->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp" >

            <Button
                android:id="@+id/btnfinish"
                android:layout_width="fill_parent"
                android:layout_height="35dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:background="@drawable/btn_login_bg"
                android:text="补充完毕"
                android:textColor="#FFFFFF"
                android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>

    <!-- 添加一个TextView文本组件标签 -->

</RelativeLayout>