<?xml version="1.0" encoding="utf-8"?>
<!-- 界面外围的的整体布局风格 -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:padding="10dp" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/btn_login_bg"
        android:orientation="vertical"
        android:padding="10dp" >

        <!-- 上半部分：TableLayout完成我们的标签和编辑文本框 -->

        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:collapseColumns="2"
            android:stretchColumns="0" >

            <!-- 第一行组件标签 -->

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <!-- 添加一个编辑文本框 -->

                <EditText
                    android:id="@+id/selectByname"
                    android:layout_width="fill_parent"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_login_bg"
                    android:hint="请输入客户姓名"
                    android:inputType="text"
                    android:paddingLeft="8dp"
                    android:textSize="15sp" />

                <Button
                    android:id="@+id/btnSelectByname"
                    android:layout_width="fill_parent"
                    android:layout_height="35dp"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="2"
                    android:background="@drawable/btn_login_bg"
                    android:text="查询"
                    android:textColor="#FFFFFF"
                    android:textSize="15sp" />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingTop="30dp" >

                <!-- 添加一个编辑文本框 -->

                <EditText
                    android:id="@+id/selectBydate"
                    android:layout_width="fill_parent"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_login_bg"
                    android:hint="请输入日期"
                    android:inputType="date"
                    android:paddingLeft="8dp"
                    android:textSize="15sp" />

                <Button
                    android:id="@+id/btnSelectBydate"
                    android:layout_width="fill_parent"
                    android:layout_height="35dp"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="2"
                    android:background="@drawable/btn_login_bg"
                    android:text="查询"
                    android:textColor="#FFFFFF"
                    android:textSize="15sp" />
            </TableRow>
        </TableLayout>

        <!-- 下半部分：LinearLayout实现按钮组件的添加 -->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp" >

            <Button
                android:id="@+id/btnselectToday"
                android:layout_width="fill_parent"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:background="@drawable/btn_login_bg"
                android:text="查询当天"
                android:textColor="#FFFFFF"
                android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>